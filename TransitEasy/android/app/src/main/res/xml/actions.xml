<?xml version ="1.0" encoding ="utf-8"?>
<!--  Learn More about how to use App Actions: https://developer.android.com/guide/actions/index.html -->
<actions>
    <action intentName="custom.actions.intent.OPEN_NEARBY_STOPS" queryPatterns="@array/nearby_stops_synonyms">
        <fulfillment urlTemplate="https://transiteasy.com/" />
    </action>
    <action intentName="custom.actions.intent.OPEN_SERVICE_ALERTS" queryPatterns="@array/service_alerts_synonyms">
        <parameter name="filter">
            <entity-set-reference entitySetId="ServiceAlertParamEntitySet" />
        </parameter>
        <fulfillment urlTemplate="https://transiteasy.com/servicealerts" />
    </action>
    <entity-set entitySetId="ServiceAlertParamEntitySet">
        <entity identifier="TEXT_FILTER" name="@string/text_filter_param_name" />
    </entity-set>
</actions>